                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Aseem" name="member" id="member16">
                        <label class="form-check-label" for="member16">Aseem</label>
                    </div>
                </form>
                <button id="createReport" class="btn btn-primary">Create Report</button>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('createReport').addEventListener('click', () => {
            const doneMembers = [];
            const notDoneMembers = [];

            const checkboxes = document.querySelectorAll("input[type='checkbox']");

            checkboxes.forEach(checkbox => {
                if (checkbox.checked) {
                    doneMembers.push(checkbox.value);
                } else {
                    notDoneMembers.push(checkbox.value);
                }
            });

            window.location.href = `/summary?doneMembers=${doneMembers.join(",")}&notDoneMembers=${notDoneMembers.join(",")}`;
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
