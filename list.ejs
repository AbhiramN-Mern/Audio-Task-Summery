<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Batch Members</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 400px;
            margin: 30px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #343a40;
        }
        .member-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #eee;
        }
        .member-name {
            font-size: 18px;
            font-weight: 500;
        }
        .form-check-input {
            width: 25px;
            height: 25px;
            cursor: pointer;
        }
        #createReport {
            width: 100%;
            margin-top: 25px;
            padding: 12px;
            font-size: 18px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Batch Members</h2>
        <div class="row">
            <div class="col-12">
                <form id="membersForm">
                    <div class="member-item">
                        <label class="member-name" for="member1">Abhiram</label>
                        <input class="form-check-input" type="checkbox" value="Abhiram" name="member" id="member1">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member2">Sinan</label>
                        <input class="form-check-input" type="checkbox" value="Sinan" name="member" id="member2">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member3">Rahna</label>
                        <input class="form-check-input" type="checkbox" value="Rahna" name="member" id="member3">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member4">Salih</label>
                        <input class="form-check-input" type="checkbox" value="Salih" name="member" id="member4">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member5">Asmin</label>
                        <input class="form-check-input" type="checkbox" value="Asmin" name="member" id="member5">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member6">Nidhal</label>
                        <input class="form-check-input" type="checkbox" value="Nidhal" name="member" id="member6">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member7">Murshid</label>
                        <input class="form-check-input" type="checkbox" value="Murshid" name="member" id="member7">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member8">Anas</label>
                        <input class="form-check-input" type="checkbox" value="Anas" name="member" id="member8">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member9">Irfana</label>
                        <input class="form-check-input" type="checkbox" value="Irfana" name="member" id="member9">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member10">Navendu</label>
                        <input class="form-check-input" type="checkbox" value="Navendu" name="member" id="member10">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member11">Nihad</label>
                        <input class="form-check-input" type="checkbox" value="Nihad" name="member" id="member11">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member12">Adhil</label>
                        <input class="form-check-input" type="checkbox" value="Adhil" name="member" id="member12">
                    </div>
                    <div class="member-item">
                        <label class="member-name" for="member13">Ashmil</label>
                        <input class="form-check-input" type="checkbox" value="Ashmil" name="member" id="member13">
                    </div>
                   
                </form>
                <button id="createReport" class="btn btn-primary">Create Report</button>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('createReport').addEventListener('click', () => {
            const doneMembers = [];
            const notDoneMembers = [];

            const checkboxes = document.querySelectorAll("input[type='checkbox']");

            checkboxes.forEach(checkbox => {
                if (checkbox.checked) {
                    doneMembers.push(checkbox.value);
                } else {
                    notDoneMembers.push(checkbox.value);
                }
            });

            window.location.href = `/summary?doneMembers=${doneMembers.join(",")}&notDoneMembers=${notDoneMembers.join(",")}`;
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>